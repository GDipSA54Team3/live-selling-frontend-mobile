<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:id="@+id/my_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity"
    tools:ignore="HardcodedText">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="false"
            android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/rating_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="My Rating"
                android:gravity="center"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/rating_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="TextView"
                android:gravity="center"/>
            <RatingBar
                android:id="@+id/rating_bar_dash"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:isIndicator="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1"
                android:theme="@style/RatingBar"/>
            <TextView
                android:id="@+id/popularity_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="My Popularity"
                android:gravity="center"/>
            <TextView
                android:id="@+id/popularity_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Updating.."
                android:gravity="center"/>
            <ImageView
                android:id="@+id/pop_chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/pending_orders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Orders Pending Confirmation"
                android:gravity="center"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/pending_order_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="Fetiching.."
                android:gravity="center"/>
            <TextView
                android:id="@+id/upcoming_stream"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="My Upcoming Streams"
                android:gravity="center"
                android:layout_marginTop="5dp"/>
            <TableLayout
                android:id="@+id/table_upcoming_stream"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:stretchColumns="0,1,2">
                </TableLayout>
            <TextView
                android:id="@+id/more_stream"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="Fetching.. "
                android:gravity="center"
                android:layout_marginTop="5dp"/>
            <Button
                android:id="@+id/view_all_stream"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All"/>

            <TextView
                android:id="@+id/prediction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Viewers and Orders Prediction"
                android:gravity="center"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <Spinner
                    android:id="@+id/spinner_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:id="@+id/spinner_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:id="@+id/spinner_period"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btn_predict"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Predict" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/expected_orders_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="Expected Orders:"
                    android:gravity="center"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/expected_orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:text="Fetching.."
                    android:gravity="center"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/expected_viewers_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="Expected Viewers:"
                    android:gravity="center"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/expected_viewers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:text="Fetching.."
                    android:gravity="center"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/platform_statitics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Platform Sales Statistics"
                android:gravity="center"
                android:layout_marginTop="5dp"/>

            <ImageView
                android:id="@+id/time_series_chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>
            <ImageView
                android:id="@+id/time_period_chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>
        </LinearLayout>
    </ScrollView>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/sidebar" />
</androidx.drawerlayout.widget.DrawerLayout>


